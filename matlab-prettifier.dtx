\lst@Key{mlstringstyle}\relax%
  {\renewcommand\stringStyle@mlpr{#1}}
%    \end{macrocode}
% \end{lstkey}
%
% \begin{lstkey}{mlcommentstyle}
% This key determines the style of \matlab{} (to-end-of-line and block)
% comments.
%    \begin{macrocode}
\lst@Key{mlcommentstyle}\relax%
  {\renewcommand\commentStyle@mlpr{#1}}
%    \end{macrocode}
% \end{lstkey}
%
% \begin{lstkey}{mlsectiontitlestyle}
%   This key determines the style of \matlab{} section titles.
